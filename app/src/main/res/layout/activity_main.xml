<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.innooz.seekbar2.MainActivity">

    <ImageView
        android:id="@+id/asdf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/asdf"
        android:layout_marginTop="8dp"
        android:scaleType="fitCenter"/>

    <com.xw.repo.BubbleSeekBar
        android:id="@+id/seekbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:bsb_bubble_color="@color/yellow"
        app:bsb_bubble_text_color="@android:color/black"
        app:bsb_second_track_color="@android:color/holo_red_dark"
        app:bsb_max="10"
        app:bsb_min="0"
        app:bsb_progress="5"
        app:bsb_section_count="5"
        app:bsb_show_progress_in_float="true"
        app:bsb_show_section_mark="true"
        app:bsb_show_section_text="true"
        app:bsb_show_thumb_text="true"
        app:bsb_auto_adjust_section_mark="false"
        app:bsb_bubble_text_size="15dp"
        app:bsb_track_size="3dp"
        app:bsb_second_track_size="10dp"
        app:bsb_section_text_size="10dp"
        app:bsb_thumb_text_size="16dp"

        app:bsb_section_text_position="bottom_sides"
        app:bsb_always_show_bubble="true"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/a" />

        <ImageView
            android:layout_width="63dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/b" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/c" />

        <ImageView
            android:layout_width="69dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/d" />

        <ImageView
            android:layout_width="64dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/e" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/f" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:visibility="gone" />

    <ListView
        android:id="@+id/listview2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:background="@drawable/linearlayout_stroke"
        android:stackFromBottom="true"
        android:transcriptMode="alwaysScroll"
        android:visibility="visible" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <Space
            android:layout_width="30dp"
            android:layout_height="40dp" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_rectangle"
            android:text="Send Email" />

        <Space
            android:layout_width="30dp"
            android:layout_height="40dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_rectangle"
            android:text="Clear Data" />


        <Space
            android:layout_width="30dp"
            android:layout_height="40dp" />

    </LinearLayout>

</LinearLayout>
