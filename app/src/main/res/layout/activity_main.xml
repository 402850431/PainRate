<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.innooz.seekbar2.MainActivity">

    <TextView
        android:id="@+id/tvFileInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toTopOf="@+id/seekbar2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="檔案位置：download/blah/blah\n檔案名稱：testName" />


    <com.xw.repo.BubbleSeekBar
        android:id="@+id/seekbar2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:bsb_always_show_bubble="false"
        app:bsb_auto_adjust_section_mark="false"
        app:bsb_bubble_color="@color/yellow"
        app:bsb_bubble_text_color="@android:color/black"
        app:bsb_bubble_text_size="15dp"
        app:bsb_max="10"
        app:bsb_min="0"
        app:bsb_second_track_color="@android:color/holo_red_dark"
        app:bsb_second_track_size="10dp"
        app:bsb_section_text_position="bottom_sides"
        app:bsb_section_text_size="10dp"
        app:bsb_show_progress_in_float="true"
        app:bsb_show_section_mark="false"

        app:bsb_show_section_text="true"
        app:bsb_show_thumb_text="true"
        app:bsb_thumb_text_size="16dp"
        app:bsb_track_size="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
